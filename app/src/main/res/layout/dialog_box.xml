<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <Button
        android:id="@+id/Add_Lena"
        android:layout_width="wrap_content"
        android:layout_height="80sp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="24dp"
        android:background="@color/design_default_color_primary"
        android:gravity="center_horizontal|center_vertical"
        android:text=" Add \n Lena"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/Add_Dena"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Add_Dena"
        android:layout_width="wrap_content"
        android:layout_height="80sp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="24dp"
        android:background="@color/design_default_color_primary"
        android:gravity="center_horizontal|center_vertical"
        android:text=" Add \n Dena"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/daily_expanse"
        app:layout_constraintStart_toEndOf="@+id/Add_Lena"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/daily_expanse"
        android:layout_width="wrap_content"
        android:layout_height="80sp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="24dp"
        android:background="@color/design_default_color_primary"
        android:gravity="center_horizontal|center_vertical"
        android:text=" Daily \n Expanse"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Add_Dena"
        app:layout_constraintTop_toTopOf="@+id/Add_Dena" />

</androidx.constraintlayout.widget.ConstraintLayout>